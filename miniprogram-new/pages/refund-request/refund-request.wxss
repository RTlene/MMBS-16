/* 申请退款页面 */
.refund-request-page {
  min-height: 100vh;
  background-color: #f5f6f8;
  padding-bottom: 140rpx;
  box-sizing: border-box;
}

.content {
  height: calc(100vh - 140rpx);
  box-sizing: border-box;
}

/* 说明区域 */
.page-tip {
  margin: 24rpx;
  padding: 28rpx 32rpx;
  background: linear-gradient(135deg, #e8f4fc 0%, #f0f8ff 100%);
  border-radius: 16rpx;
  border-left: 6rpx solid #3481B8;
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.tip-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
}

.tip-text {
  font-size: 26rpx;
  color: #666;
  line-height: 1.6;
}

/* 通用区块 */
.section {
  margin: 0 24rpx 24rpx;
  background-color: #fff;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.04);
}

.section-head {
  padding: 28rpx 32rpx 16rpx;
  display: flex;
  align-items: baseline;
  gap: 8rpx;
}

.section-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #333;
}

.required {
  font-size: 28rpx;
  color: #e74c3c;
}

.section-body {
  padding: 0 32rpx 28rpx;
}

/* 订单信息 */
.order-card {
  padding-top: 0;
}

.order-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.order-row:last-child {
  border-bottom: none;
}

.order-label {
  font-size: 28rpx;
  color: #999;
}

.order-value {
  font-size: 28rpx;
  color: #333;
}

.order-value.amount {
  font-weight: 600;
}

.order-value.highlight {
  color: #3481B8;
  font-weight: 600;
}

/* 退款金额 */
.amount-row {
  display: flex;
  align-items: center;
  padding: 24rpx 0;
  gap: 16rpx;
}

.amount-symbol {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
}

.amount-input {
  flex: 1;
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
  min-height: 72rpx;
}

.amount-max {
  padding: 12rpx 20rpx;
  background-color: #f0f8ff;
  border-radius: 12rpx;
}

.amount-max-text {
  font-size: 24rpx;
  color: #3481B8;
}

/* 退款方式 */
.method-list {
  padding: 8rpx 0 24rpx;
}

.method-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 28rpx 0;
  border-bottom: 1rpx solid #f5f5f5;
  transition: background-color 0.2s;
}

.method-item:last-child {
  border-bottom: none;
}

.method-item.active {
  background-color: #f8fbff;
  margin: 0 -32rpx;
  padding-left: 32rpx;
  padding-right: 32rpx;
  border-radius: 12rpx;
}

.method-label {
  font-size: 30rpx;
  color: #333;
}

.method-check {
  font-size: 32rpx;
  color: #3481B8;
  font-weight: 600;
}

/* 退款原因 */
.reason-input {
  width: 100%;
  min-height: 200rpx;
  padding: 24rpx 0;
  font-size: 28rpx;
  line-height: 1.6;
  color: #333;
  box-sizing: border-box;
}

.char-count {
  text-align: right;
  font-size: 24rpx;
  color: #999;
  padding-bottom: 16rpx;
}

.bottom-spacer {
  height: 40rpx;
}

/* 底部栏 */
.bottom-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: #fff;
  padding: 24rpx 24rpx calc(24rpx + env(safe-area-inset-bottom));
  box-shadow: 0 -4rpx 20rpx rgba(0, 0, 0, 0.06);
}

.submit-btn {
  width: 100%;
  height: 96rpx;
  line-height: 96rpx;
  background: linear-gradient(135deg, #3481B8 0%, #4a9fd9 100%);
  color: #fff;
  font-size: 32rpx;
  font-weight: 600;
  border-radius: 48rpx;
  border: none;
}

.submit-btn[disabled] {
  background: #c8d4dc;
  color: #fff;
}

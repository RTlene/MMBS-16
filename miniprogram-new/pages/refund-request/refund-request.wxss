.refund-request-page {
  min-height: 100vh;
  background-color: #f5f5f5;
  padding-bottom: 120rpx;
}

.content {
  height: calc(100vh - 120rpx);
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
  padding: 0 30rpx;
}

.required {
  color: #ff6b6b;
}

.order-info {
  margin-top: 20rpx;
}

.order-card {
  background-color: #ffffff;
  padding: 30rpx;
  margin: 0 20rpx 20rpx;
  border-radius: 12rpx;
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.order-no {
  font-size: 28rpx;
  color: #666;
}

.order-amount {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.return-amount {
  font-size: 28rpx;
  color: #ff6b6b;
}

.amount-section {
  margin-top: 20rpx;
}

.amount-input-wrapper {
  background-color: #ffffff;
  margin: 0 20rpx 20rpx;
  padding: 30rpx;
  border-radius: 12rpx;
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.amount-symbol {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.amount-input {
  flex: 1;
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.amount-max {
  font-size: 24rpx;
  color: #3481B8;
  padding: 8rpx 16rpx;
  background-color: #f0f8ff;
  border-radius: 8rpx;
}

.method-section {
  margin-top: 20rpx;
}

.method-list {
  background-color: #ffffff;
  margin: 0 20rpx 20rpx;
  border-radius: 12rpx;
  overflow: hidden;
}

.method-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
  transition: background-color 0.3s;
}

.method-item:last-child {
  border-bottom: none;
}

.method-item.active {
  background-color: #f0f8ff;
}

.method-label {
  font-size: 30rpx;
  color: #333;
}

.method-check {
  font-size: 32rpx;
  color: #3481B8;
  font-weight: bold;
}

.reason-section {
  margin-top: 20rpx;
}

.reason-input {
  background-color: #ffffff;
  padding: 30rpx;
  margin: 0 20rpx 20rpx;
  border-radius: 12rpx;
  min-height: 200rpx;
  font-size: 28rpx;
  line-height: 1.6;
}

.char-count {
  text-align: right;
  padding: 0 30rpx 20rpx;
  font-size: 24rpx;
  color: #999;
}

.bottom-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: #ffffff;
  padding: 20rpx 30rpx;
  box-shadow: 0 -2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.submit-btn {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  background-color: #3481B8;
  color: #ffffff;
  font-size: 32rpx;
  border-radius: 8rpx;
  border: none;
}

.submit-btn[disabled] {
  background-color: #ccc;
  color: #999;
}


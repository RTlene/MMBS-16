/* pages/index/index.wxss - 简约风格：留白、弱阴影、清晰分区 */

.index-page {
  min-height: 100vh;
  background-color: #F8FAFC;
  padding-bottom: 24rpx;
}

/* 搜索栏：扁平 */
.search-bar {
  position: fixed;
  top: 32rpx;
  left: 24rpx;
  right: 24rpx;
  z-index: 200;
  padding: 0;
}

.search-input {
  display: flex;
  align-items: center;
  height: 72rpx;
  background-color: #FFFFFF;
  border-radius: 10rpx;
  padding: 0 28rpx;
  box-shadow: 0 1rpx 4rpx rgba(0, 0, 0, 0.04);
}

.search-icon {
  font-size: 28rpx;
  margin-right: 16rpx;
  color: #94A3B8;
}

.search-placeholder {
  flex: 1;
  font-size: 28rpx;
  color: #94A3B8;
}

/* 轮播：轻量容器 */
.banner-section {
  position: relative;
  height: 380rpx;
  margin: 24rpx 24rpx 0;
  border-radius: 14rpx;
  overflow: hidden;
  background-color: #F1F5F9;
}

.banner-swiper {
  width: 100%;
  height: 100%;
}

.banner-slide {
  position: relative;
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #F1F5F9;
}

.banner-image {
  width: 100%;
  height: 100%;
  display: block;
}

.banner-placeholder {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background-color: #F1F5F9;
  color: #94A3B8;
}

.placeholder-icon {
  font-size: 72rpx;
  margin-bottom: 16rpx;
}

.placeholder-text {
  font-size: 26rpx;
  color: #94A3B8;
}

.banner-empty {
  height: 360rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background-color: #F8FAFC;
  margin: 24rpx;
  border-radius: 14rpx;
}

.empty-icon {
  font-size: 72rpx;
  margin-bottom: 16rpx;
  color: #CBD5E1;
}

.empty-text {
  font-size: 26rpx;
  color: #94A3B8;
}

/* 活动横幅 */
.activity-banner-section {
  margin: 20rpx 24rpx;
  border-radius: 14rpx;
  overflow: hidden;
  background-color: #FFFFFF;
  height: 180rpx;
  box-shadow: 0 1rpx 4rpx rgba(0, 0, 0, 0.04);
}

.activity-swiper {
  width: 100%;
  height: 100%;
}

.activity-banner-image {
  width: 100%;
  height: 100%;
  display: block;
}

/* 资讯：简洁列表 */
.article-section {
  background-color: #FFFFFF;
  margin: 20rpx 24rpx;
  border-radius: 14rpx;
  padding: 28rpx 24rpx;
  box-shadow: 0 1rpx 4rpx rgba(0, 0, 0, 0.04);
}

.article-list {
  display: flex;
  flex-direction: column;
  gap: 0;
}

.article-item {
  display: flex;
  align-items: center;
  padding: 24rpx 0;
  border-bottom: 1rpx solid #F1F5F9;
}

.article-item:last-child {
  border-bottom: none;
}

.article-cover {
  width: 128rpx;
  height: 96rpx;
  border-radius: 8rpx;
  flex-shrink: 0;
  background-color: #F1F5F9;
}

.article-cover.placeholder {
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #F1F5F9;
}

.article-placeholder-text {
  font-size: 24rpx;
  color: #CBD5E1;
}

.article-info {
  flex: 1;
  margin-left: 24rpx;
  min-width: 0;
  display: flex;
  flex-direction: column;
  gap: 6rpx;
}

.article-title {
  font-size: 28rpx;
  font-weight: 500;
  color: #1E293B;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  line-height: 1.45;
}

.article-summary {
  font-size: 24rpx;
  color: #64748B;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
  overflow: hidden;
}

.article-time {
  font-size: 22rpx;
  color: #94A3B8;
}

.article-arrow {
  font-size: 28rpx;
  color: #CBD5E1;
  margin-left: 12rpx;
}

/* 分类：简洁网格 */
.category-section {
  background-color: #FFFFFF;
  margin: 20rpx 24rpx;
  border-radius: 14rpx;
  padding: 36rpx 24rpx;
  box-shadow: 0 1rpx 4rpx rgba(0, 0, 0, 0.04);
}

.category-grid {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 28rpx 0;
  padding: 0 8rpx;
}

.category-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.category-icon {
  width: 88rpx;
  height: 88rpx;
  margin-bottom: 12rpx;
  background-color: #F8FAFC;
  border-radius: 12rpx;
}

.category-name {
  font-size: 24rpx;
  color: #64748B;
  text-align: center;
  font-weight: 400;
}

/* 商品区：简约标题 + 卡片 */
.product-section {
  background-color: #FFFFFF;
  margin: 20rpx 24rpx;
  border-radius: 14rpx;
  padding: 28rpx 24rpx;
  box-shadow: 0 1rpx 4rpx rgba(0, 0, 0, 0.04);
}

.section-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 24rpx;
}

.section-title {
  display: flex;
  align-items: center;
}

.title-icon {
  font-size: 28rpx;
  margin-right: 10rpx;
  color: #D4A017;
}

.title-icon-img {
  width: 36rpx;
  height: 36rpx;
  margin-right: 10rpx;
}

.title-text {
  font-size: 30rpx;
  font-weight: 600;
  color: #1E293B;
}

.section-more {
  display: flex;
  align-items: center;
  color: #94A3B8;
}

.more-text {
  font-size: 26rpx;
  margin-right: 4rpx;
}

.more-arrow {
  font-size: 28rpx;
  font-weight: 300;
}

.product-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 24rpx;
}

.product-item {
  background-color: #FFFFFF;
  border-radius: 12rpx;
  overflow: hidden;
  border: 1rpx solid #F1F5F9;
}

.product-image-wrapper {
  position: relative;
  width: 100%;
  padding-top: 100%;
  background-color: #F8FAFC;
  overflow: hidden;
}

.product-image {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
}

.product-tag {
  position: absolute;
  top: 12rpx;
  left: 12rpx;
  padding: 4rpx 10rpx;
  background-color: #D4A017;
  color: #FFFFFF;
  font-size: 20rpx;
  font-weight: 500;
  border-radius: 4rpx;
}

.product-hot-tag {
  position: absolute;
  top: 12rpx;
  left: 12rpx;
  width: 44rpx;
  height: 44rpx;
  background-color: #EF4444;
  color: #FFFFFF;
  font-size: 22rpx;
  font-weight: 600;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.product-info {
  padding: 20rpx 16rpx;
}

.product-name {
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  text-overflow: ellipsis;
  font-size: 26rpx;
  color: #1E293B;
  line-height: 1.45;
  min-height: 74rpx;
  font-weight: 500;
}

.product-bottom {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-top: 12rpx;
}

.product-price {
  display: flex;
  align-items: baseline;
  color: #EF4444;
  font-weight: 600;
}

.price-symbol {
  font-size: 22rpx;
  margin-right: 2rpx;
}

.price-value {
  font-size: 30rpx;
}

.product-sales {
  font-size: 22rpx;
  color: #94A3B8;
  font-weight: 400;
}

.loading {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 64rpx 0;
  color: #94A3B8;
  font-size: 26rpx;
}

.empty {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 0;
}

.empty-text {
  color: #94A3B8;
  font-size: 28rpx;
}

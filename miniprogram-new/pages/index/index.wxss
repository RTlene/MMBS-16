/* pages/index/index.wxss */

.index-page {
  min-height: 100vh;
  background-color: #F8F8F8;
  padding-bottom: 20rpx;
}

/* ==================== 搜索栏 ==================== */

.search-bar {
  position: fixed;
  top: 40rpx;
  left: 24rpx;
  right: 24rpx;
  z-index: 200;
  padding: 0;
  transition: opacity 0.3s ease;
}

.search-input {
  display: flex;
  align-items: center;
  height: 64rpx;
  background-color: rgba(255, 255, 255, 0.9);
  border-radius: 32rpx;
  padding: 0 24rpx;
}

.search-icon {
  font-size: 28rpx;
  margin-right: 16rpx;
}

.search-placeholder {
  flex: 1;
  font-size: 28rpx;
  color: #999999;
}

/* ==================== 轮播图 ==================== */

.banner-section {
  position: relative;
  height: 100vh;
  margin: 0;
  border-radius: 0;
  overflow: hidden;
  background-color: #F5F5F5;
}

.banner-swiper {
  width: 100%;
  height: 100%;
}

.banner-slide {
  position: relative;
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #F5F5F5;
}

.banner-image {
  width: 100%;
  height: 100%;
  display: block;
}

.banner-placeholder {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background-color: #F5F5F5;
  color: #999;
}

.placeholder-icon {
  font-size: 80rpx;
  margin-bottom: 20rpx;
}

.placeholder-text {
  font-size: 28rpx;
  color: #999;
}

.banner-empty {
  height: 400rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background-color: #F5F5F5;
  margin: 24rpx;
  border-radius: 16rpx;
}

.empty-icon {
  font-size: 80rpx;
  margin-bottom: 20rpx;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
}

/* ==================== 活动横幅轮播 ==================== */

.activity-banner-section {
  margin: 0 24rpx 24rpx;
  border-radius: 16rpx;
  overflow: hidden;
  background-color: #F5F5F5;
  height: 200rpx;
}

.activity-swiper {
  width: 100%;
  height: 100%;
}

.activity-banner-image {
  width: 100%;
  height: 100%;
  display: block;
}

/* ==================== 资讯列表 ==================== */

.article-section {
  background-color: #FFFFFF;
  margin: 20rpx 24rpx;
  border-radius: 16rpx;
  padding: 24rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.06);
}

.article-list {
  display: flex;
  flex-direction: column;
  gap: 0;
}

.article-item {
  display: flex;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #F0F0F0;
}

.article-item:last-child {
  border-bottom: none;
}

.article-cover {
  width: 120rpx;
  height: 120rpx;
  border-radius: 12rpx;
  flex-shrink: 0;
  background-color: #F5F5F5;
}

.article-cover.placeholder {
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #E8E8E8;
}

.article-placeholder-text {
  font-size: 28rpx;
  color: #999;
}

.article-info {
  flex: 1;
  margin-left: 24rpx;
  min-width: 0;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.article-title {
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

.article-summary {
  font-size: 24rpx;
  color: #999;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
  overflow: hidden;
}

.article-time {
  font-size: 22rpx;
  color: #BBB;
}

.article-arrow {
  font-size: 32rpx;
  color: #CCC;
  margin-left: 16rpx;
}

/* ==================== 分类导航 ==================== */

.category-section {
  background-color: #FFFFFF;
  margin: 20rpx 24rpx;
  border-radius: 16rpx;
  padding: 32rpx 0;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.06);
}

.category-grid {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 32rpx 0;
  padding: 0 24rpx;
}

.category-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.category-icon {
  width: 96rpx;
  height: 96rpx;
  margin-bottom: 12rpx;
  background-color: #F5F5F5;
  border-radius: 16rpx;
}

.category-name {
  font-size: 24rpx;
  color: #333333;
  text-align: center;
}

/* ==================== 商品区域 ==================== */

.product-section {
  background-color: #FFFFFF;
  margin: 20rpx 24rpx;
  border-radius: 16rpx;
  padding: 24rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.06);
}

/* 区域标题 */
.section-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 24rpx;
}

.section-title {
  display: flex;
  align-items: center;
}

.title-icon {
  font-size: 32rpx;
  margin-right: 12rpx;
}

.title-text {
  font-size: 32rpx;
  font-weight: bold;
  color: #333333;
}

.section-more {
  display: flex;
  align-items: center;
  color: #999999;
}

.more-text {
  font-size: 24rpx;
  margin-right: 4rpx;
}

.more-arrow {
  font-size: 32rpx;
  font-weight: bold;
}

/* 商品网格 */
.product-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20rpx;
}

.product-item {
  background-color: #FFFFFF;
  border-radius: 12rpx;
  overflow: hidden;
}

.product-image-wrapper {
  position: relative;
  width: 100%;
  padding-top: 100%;
  background-color: #F5F5F5;
  overflow: hidden;
}

.product-image {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
}

.product-tag {
  position: absolute;
  top: 16rpx;
  left: 16rpx;
  padding: 4rpx 12rpx;
  background-color: rgba(52, 129, 184, 0.9);
  color: #FFFFFF;
  font-size: 20rpx;
  border-radius: 8rpx;
}

.product-hot-tag {
  position: absolute;
  top: 16rpx;
  left: 16rpx;
  width: 48rpx;
  height: 48rpx;
  background-color: #FA5151;
  color: #FFFFFF;
  font-size: 24rpx;
  font-weight: bold;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.product-info {
  padding: 16rpx;
}

.product-name {
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  text-overflow: ellipsis;
  font-size: 28rpx;
  color: #333333;
  line-height: 1.4;
  min-height: 78rpx;
}

.product-bottom {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-top: 12rpx;
}

.product-price {
  display: flex;
  align-items: baseline;
  color: #FA5151;
  font-weight: bold;
}

.price-symbol {
  font-size: 24rpx;
  margin-right: 4rpx;
}

.price-value {
  font-size: 32rpx;
}

.product-sales {
  font-size: 20rpx;
  color: #999999;
}

/* ==================== 加载状态 ==================== */

.loading {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 80rpx 0;
  color: #999999;
  font-size: 24rpx;
}

/* ==================== 空状态 ==================== */

.empty {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 200rpx 0;
}

.empty-text {
  color: #999999;
  font-size: 28rpx;
}


/* pages/category/category.wxss - 简约风格 */

.category-page {
  display: flex;
  height: 100vh;
  background-color: #F8FAFC;
}

.category-sidebar {
  width: 180rpx;
  height: 100vh;
  background-color: #FFFFFF;
  border-right: 1rpx solid #F1F5F9;
  flex-shrink: 0;
}

.category-item {
  display: flex;
  align-items: center;
  justify-content: center;
  min-height: 96rpx;
  padding: 24rpx 16rpx;
  border-left: 3rpx solid transparent;
  transition: background 0.2s;
}

.category-item::after {
  content: '';
  position: absolute;
  right: 0;
  top: 50%;
  transform: translateY(-50%);
  width: 0;
  height: 0;
  border-style: solid;
  border-width: 6rpx 0 6rpx 6rpx;
  border-color: transparent transparent transparent transparent;
  transition: all 0.2s;
}

.category-item.active {
  background-color: #F8FAFC;
  border-left-color: #D4A017;
}

.category-item.active::after {
  border-left-color: #D4A017;
}

.category-item.active .category-name {
  color: #D4A017;
  font-weight: 600;
}

.category-name {
  font-size: 26rpx;
  color: #64748B;
  text-align: center;
  line-height: 1.4;
}

.product-list {
  flex: 1;
  height: 100vh;
  background-color: #F8FAFC;
}

.product-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 24rpx;
  padding: 24rpx 20rpx;
}

.product-item {
  background-color: #FFFFFF;
  border-radius: 12rpx;
  overflow: hidden;
  box-shadow: 0 1rpx 4rpx rgba(0, 0, 0, 0.04);
  transition: box-shadow 0.2s;
}

.product-item:active {
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.06);
}

.product-image {
  width: 100%;
  height: 260rpx;
  background-color: #F8FAFC;
  display: block;
}

.product-info {
  padding: 20rpx 16rpx;
}

.product-name {
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  font-size: 26rpx;
  color: #1E293B;
  line-height: 1.45;
  min-height: 74rpx;
  margin-bottom: 12rpx;
  font-weight: 500;
}

.product-price {
  color: #EF4444;
  font-weight: 600;
  font-size: 30rpx;
  display: flex;
  align-items: baseline;
}

.loading, .no-more, .empty {
  padding: 48rpx 0;
  text-align: center;
  color: #94A3B8;
  font-size: 26rpx;
}

.empty-icon, .error-icon {
  display: block;
  font-size: 72rpx;
  margin-bottom: 20rpx;
  opacity: 0.35;
  color: #CBD5E1;
}

.empty-text, .error-text {
  display: block;
  font-size: 28rpx;
  color: #64748B;
  margin-bottom: 12rpx;
}

.empty-desc, .empty-category-desc {
  display: block;
  font-size: 24rpx;
  color: #94A3B8;
}

.empty-category {
  padding: 80rpx 32rpx;
  text-align: center;
}

.empty-category-text {
  display: block;
  font-size: 30rpx;
  color: #1E293B;
  margin-bottom: 16rpx;
  font-weight: 500;
}

.error-state {
  padding: 48rpx 32rpx;
  text-align: center;
}

.retry-btn {
  margin-top: 24rpx;
  padding: 18rpx 40rpx;
  background-color: #D4A017;
  color: #FFFFFF;
  border-radius: 10rpx;
  font-size: 26rpx;
  font-weight: 500;
}

.no-more {
  color: #94A3B8;
  font-size: 24rpx;
  padding: 32rpx 0;
}

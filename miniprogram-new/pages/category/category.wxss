/* pages/category/category.wxss */

.category-page {
  display: flex;
  height: 100vh;
  background-color: #F8F8F8;
}

.category-sidebar {
  width: 200rpx;
  height: 100vh;
  background-color: #FFFFFF;
  border-right: 1rpx solid rgba(0, 0, 0, 0.08);
  box-shadow: 2rpx 0 8rpx rgba(0, 0, 0, 0.04);
  flex-shrink: 0;
}

.category-item {
  display: flex;
  align-items: center;
  justify-content: center;
  min-height: 100rpx;
  padding: 20rpx 12rpx;
  border-left: 4rpx solid transparent;
  transition: all 0.3s ease;
  position: relative;
}

.category-item::after {
  content: '';
  position: absolute;
  right: 0;
  top: 50%;
  transform: translateY(-50%);
  width: 0;
  height: 0;
  border-style: solid;
  border-width: 8rpx 0 8rpx 8rpx;
  border-color: transparent transparent transparent transparent;
  transition: all 0.3s ease;
}

.category-item.active {
  background: linear-gradient(90deg, rgba(212, 175, 55, 0.12) 0%, rgba(212, 175, 55, 0.04) 100%);
  border-left-color: #d4af37;
}

.category-item.active::after {
  border-left-color: #d4af37;
}

.category-item.active .category-name {
  color: #d4af37;
  font-weight: 600;
}

.category-name {
  font-size: 26rpx;
  color: #333333;
  text-align: center;
  line-height: 1.4;
  transition: all 0.3s ease;
}

.product-list {
  flex: 1;
  height: 100vh;
  background-color: #F8F8F8;
}

.product-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20rpx;
  padding: 24rpx 16rpx;
}

.product-item {
  background-color: #FFFFFF;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.08);
  border: 1rpx solid rgba(0, 0, 0, 0.06);
  transition: all 0.3s ease;
  position: relative;
}

.product-item:active {
  transform: scale(0.98);
  box-shadow: 0 1rpx 6rpx rgba(0, 0, 0, 0.12);
}

.product-image {
  width: 100%;
  height: 280rpx;
  background-color: #F5F5F5;
  display: block;
}

.product-info {
  padding: 20rpx 16rpx;
}

.product-name {
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  font-size: 26rpx;
  color: #333333;
  line-height: 1.5;
  min-height: 78rpx;
  margin-bottom: 12rpx;
}

.product-price {
  background: linear-gradient(135deg, #d4af37 0%, #f4d03f 100%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
  font-size: 32rpx;
  font-weight: bold;
  display: flex;
  align-items: baseline;
}

.loading, .no-more, .empty {
  padding: 60rpx 0;
  text-align: center;
  color: #999999;
  font-size: 26rpx;
}

.empty-icon, .error-icon {
  display: block;
  font-size: 80rpx;
  margin-bottom: 20rpx;
  opacity: 0.4;
  color: #CCCCCC;
}

.empty-text, .error-text {
  display: block;
  font-size: 28rpx;
  color: #666666;
  margin-bottom: 12rpx;
}

.empty-desc, .empty-category-desc {
  display: block;
  font-size: 24rpx;
  color: #999999;
}

.empty-category {
  padding: 100rpx 40rpx;
  text-align: center;
}

.empty-category-text {
  display: block;
  font-size: 32rpx;
  color: #333333;
  margin-bottom: 16rpx;
}

.error-state {
  padding: 60rpx 40rpx;
  text-align: center;
}

.retry-btn {
  margin-top: 24rpx;
  padding: 16rpx 48rpx;
  background: linear-gradient(135deg, #d4af37 0%, #f4d03f 100%);
  color: #FFFFFF;
  border-radius: 24rpx;
  font-size: 26rpx;
  font-weight: 600;
  box-shadow: 0 4rpx 12rpx rgba(212, 175, 55, 0.3);
}

.no-more {
  color: #999999;
  font-size: 24rpx;
  padding: 30rpx 0;
}


.customer-service-page {
  min-height: 100vh;
  background-color: #f5f5f5;
}

.content {
  height: 100vh;
}

/* 微信客服入口 */
.wechat-service-section {
  padding: 30rpx;
  background: linear-gradient(135deg, #3481B8 0%, #2a6fa5 100%);
}

.wechat-service-btn {
  display: flex;
  align-items: center;
  padding: 30rpx;
  background-color: rgba(255, 255, 255, 0.15);
  border-radius: 16rpx;
  border: 2rpx solid rgba(255, 255, 255, 0.3);
  color: #ffffff;
  font-size: 0;
  line-height: 1;
}

.wechat-service-btn::after {
  border: none;
}

.service-icon {
  font-size: 48rpx;
  margin-right: 20rpx;
}

.service-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.service-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #ffffff;
}

.service-desc {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.8);
}

.service-arrow {
  font-size: 36rpx;
  color: rgba(255, 255, 255, 0.8);
}

/* 区块标题 */
.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
  padding: 0 30rpx;
}

/* 联系方式 */
.contact-section {
  margin-top: 20rpx;
}

.contact-list {
  background-color: #ffffff;
  margin: 0 20rpx 20rpx;
  border-radius: 12rpx;
  overflow: hidden;
}

.contact-item {
  display: flex;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.contact-item:last-child {
  border-bottom: none;
}

.contact-icon {
  font-size: 40rpx;
  margin-right: 20rpx;
}

.contact-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.contact-label {
  font-size: 26rpx;
  color: #999;
}

.contact-value {
  font-size: 30rpx;
  color: #333;
  font-weight: 500;
}

.contact-action {
  font-size: 28rpx;
  color: #3481B8;
  padding: 8rpx 20rpx;
  background-color: #f0f8ff;
  border-radius: 8rpx;
}

/* 服务信息 */
.info-section {
  margin-top: 20rpx;
}

.info-card {
  background-color: #ffffff;
  margin: 0 20rpx 20rpx;
  padding: 30rpx;
  border-radius: 12rpx;
}

.info-item {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.info-item:last-child {
  border-bottom: none;
  padding-bottom: 0;
}

.info-label {
  font-size: 26rpx;
  color: #999;
}

.info-value {
  font-size: 28rpx;
  color: #333;
  line-height: 1.6;
}

/* 常见问题 */
.faq-section {
  margin-top: 20rpx;
  padding-bottom: 40rpx;
}

.faq-list {
  background-color: #ffffff;
  margin: 0 20rpx 20rpx;
  border-radius: 12rpx;
  overflow: hidden;
}

.faq-item {
  border-bottom: 1rpx solid #f0f0f0;
}

.faq-item:last-child {
  border-bottom: none;
}

.faq-question {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 30rpx;
  transition: background-color 0.3s;
}

.faq-item.expanded .faq-question {
  background-color: #f8f9fa;
}

.faq-q-text {
  flex: 1;
  font-size: 30rpx;
  color: #333;
  font-weight: 500;
}

.faq-arrow {
  font-size: 24rpx;
  color: #999;
  margin-left: 20rpx;
}

.faq-answer {
  padding: 0 30rpx 30rpx;
  font-size: 28rpx;
  color: #666;
  line-height: 1.8;
  animation: slideDown 0.3s ease-out;
}

@keyframes slideDown {
  from {
    opacity: 0;
    transform: translateY(-10rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}


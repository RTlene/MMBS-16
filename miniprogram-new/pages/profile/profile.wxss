/* pages/profile/profile.wxss - 简约风格：留白、弱装饰、清晰层次 */

.profile-page {
  min-height: 100vh;
  background-color: #F8FAFC;
  padding-bottom: 48rpx;
}

/* 用户信息区：浅蓝底 + 明确底边 */
.user-section {
  background-color: #EFF6FF;
  padding: 64rpx 32rpx 52rpx;
  color: #1E293B;
  border-bottom: 1rpx solid #E2E8F0;
}

.user-info {
  display: flex;
  align-items: center;
}

.login-prompt {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.user-avatar {
  width: 112rpx;
  height: 112rpx;
  border-radius: 56rpx;
  background-color: #FFFFFF;
  margin-right: 28rpx;
  border: 1rpx solid rgba(59, 130, 246, 0.15);
}

.user-details {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.user-name {
  font-size: 34rpx;
  font-weight: 600;
  color: #1E293B;
  letter-spacing: 0.02em;
}

.user-level {
  font-size: 26rpx;
  color: #64748B;
  font-weight: 400;
}

/* 会员信息卡片：与头部明确分界 */
.level-card-section {
  margin: -32rpx 24rpx 24rpx;
  padding: 0;
  position: relative;
  z-index: 1;
}

.level-card {
  background: #FFFFFF;
  border-radius: 14rpx;
  padding: 32rpx 28rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.06);
  border: 1rpx solid #E2E8F0;
}

.level-card-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #1E293B;
  margin-bottom: 28rpx;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #F1F5F9;
}

.level-block {
  margin-bottom: 32rpx;
}

.level-block:last-child {
  margin-bottom: 0;
}

.level-block-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 14rpx;
}

.level-block-label {
  font-size: 26rpx;
  color: #64748B;
  font-weight: 400;
}

.level-block-value {
  font-size: 28rpx;
  font-weight: 600;
  color: #D4A017;
}

.level-block-body {
  padding-left: 0;
}

.progress-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  flex-wrap: wrap;
  gap: 8rpx;
  margin-bottom: 14rpx;
}

.progress-desc {
  font-size: 24rpx;
  color: #94A3B8;
}

.progress-next {
  font-size: 24rpx;
  color: #94A3B8;
}

.progress-bar-wrap {
  height: 8rpx;
  background: #F1F5F9;
  border-radius: 4rpx;
  overflow: hidden;
  margin-bottom: 14rpx;
}

.progress-bar {
  height: 100%;
  background-color: #3B82F6;
  border-radius: 4rpx;
  transition: width 0.25s ease;
}

.progress-bar.distributor-bar {
  background-color: #D4A017;
}

.progress-tip {
  font-size: 24rpx;
  color: #94A3B8;
  display: block;
  line-height: 1.5;
}

.progress-tip.max {
  color: #10B981;
}

.distributor-level-block .level-block-value {
  color: #D4A017;
}

.login-btn {
  padding: 18rpx 40rpx;
  background-color: #F8FAFC;
  border: 1rpx solid #E2E8F0;
  border-radius: 10rpx;
  color: #3B82F6;
  font-size: 28rpx;
  font-weight: 500;
}

/* 订单统计：与上方卡片统一留白 */
.order-section {
  background: #FFFFFF;
  margin: 0 24rpx 24rpx;
  border-radius: 14rpx;
  padding: 28rpx 24rpx;
  box-shadow: 0 1rpx 4rpx rgba(0, 0, 0, 0.04);
  border: 1rpx solid #F1F5F9;
}

.section-title {
  display: flex;
  align-items: center;
  justify-content: space-between;
  font-size: 28rpx;
  font-weight: 600;
  color: #1E293B;
  margin-bottom: 28rpx;
}

.title-arrow {
  font-size: 26rpx;
  font-weight: 400;
  color: #94A3B8;
}

.order-stats {
  display: flex;
  justify-content: space-around;
}

.order-stat-item {
  position: relative;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 10rpx;
}

.stat-icon {
  font-size: 40rpx;
  opacity: 0.9;
}

/* 单色文字图标（扁平、无多余色彩） */
.stat-icon.icon-text,
.menu-icon.icon-text {
  color: #64748B;
  font-weight: 600;
  font-size: 36rpx;
  opacity: 1;
}

.stat-icon.icon-text {
  font-size: 38rpx;
}

.menu-icon.icon-text {
  font-size: 34rpx;
  margin-right: 24rpx;
}

.stat-label {
  font-size: 24rpx;
  color: #64748B;
  font-weight: 400;
}

.stat-badge {
  position: absolute;
  top: -4rpx;
  right: -12rpx;
  min-width: 28rpx;
  height: 28rpx;
  padding: 0 6rpx;
  background-color: #EF4444;
  color: #FFFFFF;
  font-size: 20rpx;
  font-weight: 500;
  border-radius: 14rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

/* 功能菜单：大留白、细分割线 */
.menu-section {
  background: #FFFFFF;
  margin: 0 24rpx 24rpx;
  border-radius: 14rpx;
  overflow: hidden;
  box-shadow: 0 1rpx 4rpx rgba(0, 0, 0, 0.04);
}

.menu-item {
  display: flex;
  align-items: center;
  padding: 32rpx 28rpx;
  border-bottom: 1rpx solid #F1F5F9;
}

.menu-item:last-child {
  border-bottom: none;
}

.menu-icon {
  font-size: 36rpx;
  margin-right: 24rpx;
  opacity: 0.85;
}

.menu-label {
  flex: 1;
  font-size: 28rpx;
  color: #1E293B;
  font-weight: 500;
}

.menu-arrow {
  font-size: 28rpx;
  color: #CBD5E1;
  font-weight: 300;
}

/* 退出登录：文字链接式 */
.logout-section {
  padding: 0 24rpx;
}

.logout-btn {
  width: 100%;
  height: 96rpx;
  line-height: 96rpx;
  background-color: transparent;
  border-radius: 14rpx;
  color: #94A3B8;
  font-size: 28rpx;
  font-weight: 400;
}

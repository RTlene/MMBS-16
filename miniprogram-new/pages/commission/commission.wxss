.container {
  min-height: 100vh;
  background-color: #f5f5f5;
  padding-bottom: 20rpx;
}

.stats-card {
  background: linear-gradient(135deg, #3481B8 0%, #2a6fa5 100%);
  margin: 20rpx;
  padding: 40rpx;
  border-radius: 16rpx;
  display: flex;
  justify-content: space-around;
  box-shadow: 0 4rpx 12rpx rgba(52, 129, 184, 0.2);
}

.stats-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.stats-label {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.8);
  margin-bottom: 16rpx;
}

.stats-value {
  font-size: 48rpx;
  font-weight: bold;
  color: #ffffff;
}

.tabs {
  display: flex;
  background-color: #ffffff;
  padding: 20rpx;
  margin: 20rpx;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.tab-item {
  flex: 1;
  text-align: center;
  padding: 16rpx 0;
  font-size: 28rpx;
  color: #666;
  border-radius: 8rpx;
  transition: all 0.3s;
}

.tab-item.active {
  background-color: #3481B8;
  color: #ffffff;
  font-weight: bold;
}

.status-tabs {
  display: flex;
  background-color: #ffffff;
  padding: 20rpx;
  margin: 0 20rpx 20rpx;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.status-tab-item {
  flex: 1;
  text-align: center;
  padding: 16rpx 0;
  font-size: 28rpx;
  color: #666;
  border-radius: 8rpx;
  transition: all 0.3s;
}

.status-tab-item.active {
  background-color: #f0f8ff;
  color: #3481B8;
  font-weight: bold;
}

.records-list {
  padding: 0 20rpx;
}

.record-item {
  background-color: #ffffff;
  padding: 30rpx;
  margin-bottom: 20rpx;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.record-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.record-type {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.record-amount {
  font-size: 36rpx;
  font-weight: bold;
}

.record-amount.positive {
  color: #ff6b6b;
}

.record-amount.negative {
  color: #51cf66;
}

.record-info {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
  font-size: 26rpx;
  color: #999;
}

.record-status {
  padding: 4rpx 16rpx;
  border-radius: 8rpx;
  font-size: 24rpx;
}

.record-status.pending {
  background-color: #fff3cd;
  color: #856404;
}

.record-status.completed {
  background-color: #d4edda;
  color: #155724;
}

.record-status.cancelled {
  background-color: #f8d7da;
  color: #721c24;
}

.record-detail {
  margin-bottom: 16rpx;
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
}

.record-order {
  display: flex;
  justify-content: space-between;
  margin-bottom: 16rpx;
  font-size: 26rpx;
  color: #999;
}

.record-balance {
  font-size: 26rpx;
  color: #999;
  text-align: right;
}

.empty,
.loading,
.no-more {
  text-align: center;
  padding: 80rpx 0;
  color: #999;
  font-size: 28rpx;
}


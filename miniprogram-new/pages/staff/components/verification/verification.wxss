.verification-container {
  padding: 20rpx;
}

.scan-section {
  margin-bottom: 40rpx;
}

.scan-btn {
  width: 100%;
  height: 200rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #fff;
  border-radius: 16rpx;
  border: none;
}

.scan-icon {
  font-size: 80rpx;
  margin-bottom: 16rpx;
}

.scan-text {
  font-size: 32rpx;
  font-weight: bold;
}

.input-section {
  margin-bottom: 40rpx;
}

.input-wrapper {
  display: flex;
  gap: 20rpx;
  align-items: center;
}

.code-input {
  flex: 1;
  height: 88rpx;
  padding: 0 24rpx;
  background-color: #fff;
  border-radius: 12rpx;
  font-size: 28rpx;
}

.query-btn {
  padding: 0 32rpx;
  height: 88rpx;
  line-height: 88rpx;
  background-color: #667eea;
  color: #fff;
  border-radius: 12rpx;
  font-size: 28rpx;
}

.result-section {
  margin-top: 40rpx;
}

.result-card {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
}

.result-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
  padding-bottom: 20rpx;
  border-bottom: 1px solid #f0f0f0;
}

.result-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.result-status {
  font-size: 24rpx;
  padding: 8rpx 16rpx;
  border-radius: 8rpx;
}

.status-unused {
  background-color: #e8f5e9;
  color: #4caf50;
}

.status-used {
  background-color: #f3e5f5;
  color: #9c27b0;
}

.status-expired {
  background-color: #ffebee;
  color: #f44336;
}

.result-body {
  margin-bottom: 30rpx;
}

.result-item {
  display: flex;
  margin-bottom: 20rpx;
  font-size: 28rpx;
}

.item-label {
  color: #666;
  width: 140rpx;
  flex-shrink: 0;
}

.item-value {
  color: #333;
  flex: 1;
}

.code-value {
  font-size: 32rpx;
  font-weight: bold;
  color: #667eea;
  letter-spacing: 2rpx;
}

.result-footer {
  display: flex;
  gap: 20rpx;
}

.use-btn,
.reset-btn {
  flex: 1;
  height: 88rpx;
  line-height: 88rpx;
  border-radius: 12rpx;
  font-size: 32rpx;
  border: none;
}

.use-btn {
  background-color: #667eea;
  color: #fff;
}

.use-btn[disabled] {
  background-color: #ccc;
  color: #999;
}

.reset-btn {
  background-color: #f5f5f5;
  color: #666;
}

.loading {
  text-align: center;
  padding: 60rpx 0;
  color: #999;
  font-size: 28rpx;
}


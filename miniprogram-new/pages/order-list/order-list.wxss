/* pages/order-list/order-list.wxss */

.order-list-page {
  min-height: 100vh;
  background-color: #F8F8F8;
  display: flex;
  flex-direction: column;
}

/* 状态筛选标签 */
.status-tabs {
  display: flex;
  background-color: #FFFFFF;
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.08);
  position: sticky;
  top: 0;
  z-index: 10;
}

.status-tab {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 24rpx 0;
  position: relative;
  transition: all 0.3s ease;
}

.status-tab.active {
  color: #d4af37;
}

.status-tab.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 60rpx;
  height: 4rpx;
  background: linear-gradient(135deg, #d4af37 0%, #f4d03f 100%);
  border-radius: 2rpx;
}

.tab-label {
  font-size: 28rpx;
  color: #333333;
  transition: all 0.3s ease;
}

.status-tab.active .tab-label {
  color: #d4af37;
  font-weight: 600;
}

/* 订单列表 */
.order-list {
  flex: 1;
  height: calc(100vh - 88rpx);
}

/* 订单卡片 */
.order-item {
  background-color: #FFFFFF;
  margin: 20rpx 24rpx;
  border-radius: 16rpx;
  padding: 24rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.08);
  border: 1rpx solid rgba(0, 0, 0, 0.06);
}

/* 订单头部 */
.order-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 20rpx;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #F0F0F0;
}

.order-no {
  font-size: 24rpx;
  color: #999999;
}

.order-status {
  font-size: 26rpx;
  font-weight: 600;
  padding: 4rpx 16rpx;
  border-radius: 8rpx;
}

.order-status.pending {
  color: #FA5151;
  background-color: rgba(250, 81, 81, 0.1);
}

.order-status.paid {
  color: #3481B8;
  background-color: rgba(52, 129, 184, 0.1);
}

.order-status.shipped {
  color: #d4af37;
  background-color: rgba(212, 175, 55, 0.1);
}

.order-status.delivered,
.order-status.completed {
  color: #52C41A;
  background-color: rgba(82, 196, 26, 0.1);
}

.order-status.cancelled {
  color: #999999;
  background-color: rgba(153, 153, 153, 0.1);
}

/* 商品信息 */
.order-product {
  display: flex;
  gap: 20rpx;
  margin-bottom: 20rpx;
}

.product-image {
  width: 160rpx;
  height: 160rpx;
  border-radius: 12rpx;
  background-color: #F5F5F5;
  flex-shrink: 0;
}

.product-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 12rpx;
  min-width: 0;
}

.product-name {
  font-size: 28rpx;
  color: #333333;
  line-height: 1.5;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

.product-subtitle {
  font-size: 22rpx;
  color: #999999;
  line-height: 1.4;
}

.product-spec {
  font-size: 24rpx;
  color: #999999;
}

.product-price {
  display: flex;
  align-items: baseline;
  margin-top: auto;
}

.price-label {
  font-size: 24rpx;
  color: #666666;
  margin-right: 8rpx;
}

.price-value {
  font-size: 32rpx;
  font-weight: bold;
  background: linear-gradient(135deg, #d4af37 0%, #f4d03f 100%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
}

/* 订单操作按钮 */
.order-actions {
  display: flex;
  justify-content: flex-end;
  gap: 16rpx;
  margin-bottom: 16rpx;
}

.action-btn {
  padding: 12rpx 32rpx;
  border-radius: 24rpx;
  font-size: 26rpx;
  font-weight: 500;
  transition: all 0.3s ease;
}

.action-btn.primary {
  background: linear-gradient(135deg, #d4af37 0%, #f4d03f 100%);
  color: #FFFFFF;
  box-shadow: 0 4rpx 12rpx rgba(212, 175, 55, 0.3);
}

.action-btn.secondary {
  background-color: #F5F5F5;
  color: #666666;
  border: 1rpx solid #E0E0E0;
}

.action-btn:active {
  opacity: 0.8;
  transform: scale(0.98);
}

/* 订单时间 */
.order-time {
  padding-top: 16rpx;
  border-top: 1rpx solid #F0F0F0;
}

.time-text {
  font-size: 22rpx;
  color: #999999;
}

/* 加载状态 */
.loading {
  padding: 40rpx 0;
  text-align: center;
}

.loading-text {
  font-size: 26rpx;
  color: #999999;
}

/* 没有更多了 */
.no-more {
  padding: 40rpx 0;
  text-align: center;
}

.no-more-text {
  font-size: 24rpx;
  color: #CCCCCC;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 200rpx 40rpx;
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 24rpx;
  opacity: 0.5;
}

.empty-text {
  font-size: 32rpx;
  color: #333333;
  margin-bottom: 12rpx;
  font-weight: 600;
}

.empty-desc {
  font-size: 26rpx;
  color: #999999;
}

/* 错误状态 */
.error-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 200rpx 40rpx;
}

.error-icon {
  font-size: 120rpx;
  margin-bottom: 24rpx;
  opacity: 0.5;
}

.error-text {
  font-size: 28rpx;
  color: #666666;
  margin-bottom: 32rpx;
  text-align: center;
}

.retry-btn {
  padding: 16rpx 48rpx;
  background: linear-gradient(135deg, #d4af37 0%, #f4d03f 100%);
  color: #FFFFFF;
  border-radius: 24rpx;
  font-size: 26rpx;
  font-weight: 600;
  box-shadow: 0 4rpx 12rpx rgba(212, 175, 55, 0.3);
}

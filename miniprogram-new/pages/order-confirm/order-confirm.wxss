/* pages/order-confirm/order-confirm.wxss */

.order-confirm-page {
  min-height: 100vh;
  background: linear-gradient(180deg, #f0f4f8 0%, #e8eef5 120rpx);
  padding-bottom: 180rpx;
}

.section-block {
  margin: 0 24rpx 24rpx;
}

.block-title {
  display: flex;
  align-items: center;
  margin-bottom: 16rpx;
  padding-left: 8rpx;
}

.block-title-icon {
  font-size: 32rpx;
  margin-right: 10rpx;
}

.block-title-text {
  font-size: 30rpx;
  font-weight: 600;
  color: #1a1a2e;
}

.address-card {
  background-color: #FFFFFF;
  border-radius: 20rpx;
  padding: 28rpx 24rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.06);
}

.field {
  display: flex;
  align-items: center;
  padding: 16rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.field:first-child {
  padding-top: 0;
}

.field:last-child {
  border-bottom: none;
  padding-bottom: 0;
}

.field.multi-line {
  flex-direction: column;
  align-items: flex-start;
}

.field-label {
  width: 140rpx;
  font-size: 28rpx;
  color: #333333;
}

.field-input {
  flex: 1;
  font-size: 28rpx;
  padding: 0 12rpx;
}

.field-textarea {
  width: 100%;
  min-height: 120rpx;
  margin-top: 12rpx;
  font-size: 26rpx;
  line-height: 1.6;
}

.field.map-choose-row {
  align-items: center;
}

.field.map-choose-row .map-btn {
  margin-left: 0;
  font-size: 24rpx;
  padding: 8rpx 20rpx;
  background: #f0f4f8;
  color: #333;
}

.field.choose-address {
  justify-content: space-between;
}

.field.choose-address .choose-text {
  font-size: 28rpx;
  color: #333;
}

.field.choose-address .choose-arrow {
  font-size: 32rpx;
  color: #999;
}

/* 配送方式 */
.delivery-type-card {
  display: flex;
  background: #fff;
  border-radius: 20rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 20rpx rgba(0,0,0,0.06);
}
.delivery-option {
  flex: 1;
  padding: 24rpx;
  text-align: center;
  border: 2rpx solid #eee;
  border-radius: 16rpx;
  margin: 0 8rpx;
}
.delivery-option:first-child { margin-left: 0; }
.delivery-option:last-child { margin-right: 0; }
.delivery-option.active {
  border-color: #ff6b35;
  background: rgba(255,107,53,0.06);
}
.delivery-option .option-label { font-size: 28rpx; font-weight: 600; color: #333; display: block; }
.delivery-option .option-desc { font-size: 24rpx; color: #999; margin-top: 6rpx; display: block; }
.delivery-option.active .option-label { color: #ff6b35; }

/* 自提门店 */
.store-card {
  background: #fff;
  border-radius: 20rpx;
  padding: 24rpx 28rpx;
  box-shadow: 0 4rpx 20rpx rgba(0,0,0,0.06);
}
.store-selected .store-name { font-size: 30rpx; font-weight: 600; color: #1a1a2e; display: block; }
.store-selected .store-address { font-size: 26rpx; color: #666; margin-top: 8rpx; display: block; }
.store-selected .store-distance { font-size: 24rpx; color: #999; margin-top: 6rpx; display: block; }
.store-selected .store-actions { margin-top: 16rpx; display: flex; gap: 24rpx; }
.store-action-link { font-size: 26rpx; color: #ff6b35; }
.store-choose-placeholder { display: flex; justify-content: space-between; align-items: center; color: #666; font-size: 28rpx; }
.store-choose-placeholder .choose-arrow { color: #999; font-size: 32rpx; }

/* 门店选择弹窗 */
.store-picker-mask {
  position: fixed; left: 0; right: 0; top: 0; bottom: 0;
  background: rgba(0,0,0,0.5);
  z-index: 1000;
  display: flex;
  align-items: flex-end;
}
.store-picker {
  width: 100%;
  max-height: 70vh;
  background: #fff;
  border-radius: 24rpx 24rpx 0 0;
  display: flex;
  flex-direction: column;
}
.store-picker .picker-header { display: flex; justify-content: space-between; align-items: center; padding: 28rpx; border-bottom: 1rpx solid #f0f0f0; }
.store-picker .picker-title { font-size: 32rpx; font-weight: 600; }
.store-picker .picker-close { font-size: 40rpx; color: #999; }
.store-picker-list { max-height: 60vh; padding: 16rpx; }
.store-picker-item {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  padding: 24rpx;
  border-radius: 16rpx;
  margin-bottom: 12rpx;
  background: #f8f9fa;
  border: 2rpx solid transparent;
}
.store-picker-item.selected { border-color: #ff6b35; background: rgba(255,107,53,0.06); }
.store-item-main { flex: 1; }
.store-item-name { font-size: 28rpx; font-weight: 600; color: #333; display: block; }
.store-item-address { font-size: 24rpx; color: #666; margin-top: 6rpx; display: block; }
.store-item-distance { font-size: 22rpx; color: #999; margin-top: 4rpx; display: block; }
.store-item-actions { display: flex; gap: 12rpx; flex-shrink: 0; }
.store-item-btn { font-size: 24rpx; color: #ff6b35; padding: 8rpx 16rpx; background: rgba(255,107,53,0.1); border-radius: 8rpx; }
.no-store { text-align: center; padding: 48rpx; color: #999; font-size: 28rpx; }

.section-title {
  font-size: 28rpx;
  color: #666666;
  margin-bottom: 16rpx;
}

.items-card {
  background-color: #FFFFFF;
  border-radius: 20rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.06);
}

.item-card {
  display: flex;
  padding: 24rpx;
  border-bottom: 1rpx solid #f5f5f5;
}

.item-card:last-child {
  border-bottom: none;
}

.item-image {
  width: 140rpx;
  height: 140rpx;
  border-radius: 12rpx;
  background-color: #F5F5F5;
  margin-right: 16rpx;
}

.item-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.item-name {
  font-size: 28rpx;
  color: #333333;
  line-height: 1.4;
}

.item-sku {
  font-size: 24rpx;
  color: #999999;
}

.item-meta {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: auto;
}

.item-price {
  font-size: 30rpx;
  font-weight: bold;
  background: linear-gradient(135deg, #d4af37 0%, #f4d03f 100%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
}

.item-qty {
  font-size: 26rpx;
  color: #666666;
}

.summary-section .block-title {
  margin-bottom: 12rpx;
}

.summary-card {
  background-color: #FFFFFF;
  border-radius: 20rpx;
  padding: 24rpx 28rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.06);
}

.remark-row {
  margin-top: 20rpx;
  padding-top: 20rpx;
  border-top: 1rpx solid #f0f0f0;
}

.remark-label {
  display: block;
  font-size: 26rpx;
  color: #666;
  margin-bottom: 12rpx;
}

.summary-section {
  margin: 0 24rpx 24rpx;
}

.summary-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.summary-label {
  font-size: 28rpx;
  color: #333333;
}

.summary-value {
  font-size: 30rpx;
  font-weight: bold;
  color: #333333;
}

/* 优惠券行 */
.coupon-row {
  margin-top: 16rpx;
  padding: 16rpx;
  background-color: #FAFAFA;
  border-radius: 12rpx;
  cursor: pointer;
}

.coupon-left {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.coupon-desc {
  font-size: 24rpx;
  color: #666666;
}

.coupon-desc.placeholder {
  color: #999999;
}

.coupon-right {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.coupon-discount {
  font-size: 26rpx;
  color: #FA5151;
  font-weight: 600;
}

.coupon-arrow {
  font-size: 28rpx;
  color: #CCCCCC;
}

/* 价格明细 */
.price-detail {
  margin-top: 16rpx;
  padding-top: 16rpx;
  border-top: 1rpx solid #F0F0F0;
}

.detail-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 12rpx;
}

.detail-row:last-child {
  margin-bottom: 0;
}

.detail-label {
  font-size: 26rpx;
  color: #666666;
}

.detail-value {
  font-size: 28rpx;
  color: #333333;
}

.detail-value.discount {
  color: #FA5151;
  font-weight: 600;
}

.discount-row {
  padding-top: 12rpx;
  border-top: 1rpx dashed #F0F0F0;
}

/* 优惠券选择弹窗 */
.coupon-picker-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
  z-index: 1000;
  display: flex;
  align-items: flex-end;
}

.coupon-picker {
  width: 100%;
  max-height: 70vh;
  background-color: #FFFFFF;
  border-radius: 24rpx 24rpx 0 0;
  display: flex;
  flex-direction: column;
  animation: slideUp 0.3s ease-out;
}

@keyframes slideUp {
  from {
    transform: translateY(100%);
  }
  to {
    transform: translateY(0);
  }
}

.picker-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 24rpx;
  border-bottom: 1rpx solid #F0F0F0;
}

.picker-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333333;
}

.picker-close {
  font-size: 48rpx;
  color: #999999;
  line-height: 1;
  width: 48rpx;
  height: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.picker-content {
  flex: 1;
  max-height: calc(70vh - 140rpx);
  padding: 24rpx;
}

.coupon-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx;
  margin-bottom: 16rpx;
  background-color: #FAFAFA;
  border-radius: 12rpx;
  border: 2rpx solid transparent;
}

.coupon-item.selected {
  border-color: #d4af37;
  background-color: #FFFBF0;
}

.coupon-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.coupon-name {
  font-size: 28rpx;
  color: #333333;
  font-weight: 600;
}

.coupon-action {
  display: flex;
  align-items: center;
}

.coupon-discount-value {
  font-size: 32rpx;
  font-weight: bold;
  background: linear-gradient(135deg, #d4af37 0%, #f4d03f 100%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
}

.no-coupon {
  text-align: center;
  padding: 80rpx 0;
}

.no-coupon-text {
  font-size: 26rpx;
  color: #999999;
}

.picker-footer {
  padding: 24rpx;
  border-top: 1rpx solid #F0F0F0;
}

.remove-coupon-btn {
  width: 100%;
  height: 72rpx;
  line-height: 72rpx;
  border-radius: 36rpx;
  background-color: #F5F5F5;
  color: #666666;
  font-size: 28rpx;
  text-align: center;
}

/* 抵扣行 */
.deduction-row {
  margin-top: 16rpx;
  padding: 16rpx;
  background-color: #FAFAFA;
  border-radius: 12rpx;
}

.deduction-left {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.deduction-desc {
  font-size: 24rpx;
  color: #666666;
}

.deduction-desc.placeholder {
  color: #999999;
}

.deduction-right {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.deduction-amount {
  font-size: 26rpx;
  color: #FA5151;
  font-weight: 600;
}

.deduction-input-row {
  display: flex;
  align-items: center;
  margin-top: 12rpx;
  padding: 12rpx 16rpx;
  background-color: #FFFFFF;
  border-radius: 8rpx;
  border: 1rpx solid #F0F0F0;
}

.deduction-input-label {
  font-size: 26rpx;
  color: #666666;
  margin-right: 12rpx;
}

.deduction-input {
  flex: 1;
  font-size: 28rpx;
  color: #333333;
  padding: 0 12rpx;
}

.deduction-input-unit {
  font-size: 24rpx;
  color: #999999;
  margin-left: 8rpx;
}

.remark-input {
  width: 100%;
  min-height: 100rpx;
  border-radius: 12rpx;
  border: 1rpx solid #eee;
  padding: 16rpx;
  font-size: 26rpx;
  background-color: #fafafa;
  box-sizing: border-box;
}

.bottom-bar {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx 24rpx;
  background-color: #FFFFFF;
  border-top: 1rpx solid #F0F0F0;
  box-shadow: 0 -2rpx 12rpx rgba(0, 0, 0, 0.05);
  padding-bottom: calc(20rpx + env(safe-area-inset-bottom));
}

.total-info {
  display: flex;
  align-items: baseline;
  gap: 8rpx;
}

.total-label {
  font-size: 26rpx;
  color: #666666;
}

.total-amount {
  font-size: 36rpx;
  font-weight: bold;
  background: linear-gradient(135deg, #d4af37 0%, #f4d03f 100%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
}

.submit-btn {
  min-width: 220rpx;
  height: 72rpx;
  line-height: 72rpx;
  border-radius: 36rpx;
  background: linear-gradient(135deg, #d4af37 0%, #f4d03f 100%);
  color: #FFFFFF;
  font-size: 28rpx;
  font-weight: 600;
  box-shadow: 0 4rpx 12rpx rgba(212, 175, 55, 0.3);
}



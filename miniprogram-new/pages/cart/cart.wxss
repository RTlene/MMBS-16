/* pages/cart/cart.wxss - 简约风格 */

.cart-page {
  display: flex;
  flex-direction: column;
  height: 100vh;
  background-color: #F8FAFC;
}

.cart-list {
  flex: 1;
  padding: 24rpx;
  padding-bottom: 120rpx;
}

.cart-item {
  display: flex;
  align-items: center;
  background-color: #FFFFFF;
  border-radius: 12rpx;
  padding: 24rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 1rpx 4rpx rgba(0, 0, 0, 0.04);
}

.item-checkbox {
  margin-right: 24rpx;
}

.checkbox-icon {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 44rpx;
  height: 44rpx;
  border: 2rpx solid #E2E8F0;
  border-radius: 50%;
  box-sizing: border-box;
}

.checkbox-icon.checked {
  background-color: #D4A017;
  border-color: #D4A017;
}

.checkmark {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 100%;
  height: 100%;
  font-size: 24rpx;
  color: #FFFFFF;
  font-weight: 600;
}

.item-image {
  width: 160rpx;
  height: 160rpx;
  border-radius: 8rpx;
  background-color: #F8FAFC;
  margin-right: 24rpx;
}

.item-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  height: 160rpx;
  min-width: 0;
}

.item-name {
  font-size: 28rpx;
  color: #1E293B;
  font-weight: 500;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  line-height: 1.45;
}

.item-sku {
  font-size: 24rpx;
  color: #94A3B8;
  margin-top: 8rpx;
}

.item-bottom {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.item-price {
  font-size: 30rpx;
  font-weight: 600;
  color: #EF4444;
}

.item-quantity {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.quantity-btn {
  width: 48rpx;
  height: 48rpx;
  background-color: #F1F5F9;
  border-radius: 8rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  color: #475569;
}

.quantity-value {
  font-size: 28rpx;
  color: #1E293B;
  min-width: 48rpx;
  text-align: center;
  font-weight: 500;
}

.item-delete {
  margin-left: 16rpx;
}

.delete-icon {
  font-size: 36rpx;
  color: #94A3B8;
}

.empty-cart {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding-top: 160rpx;
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 32rpx;
  opacity: 0.25;
  color: #94A3B8;
}
.empty-icon-img {
  width: 160rpx;
  height: 160rpx;
  margin-bottom: 32rpx;
  opacity: 0.5;
}
.delete-icon-img {
  width: 40rpx;
  height: 40rpx;
  opacity: 0.7;
}

.empty-text {
  font-size: 28rpx;
  color: #94A3B8;
  margin-bottom: 48rpx;
}

.go-shopping-btn {
  width: 200rpx;
  height: 76rpx;
  line-height: 76rpx;
  background-color: #D4A017;
  color: #FFFFFF;
  border-radius: 10rpx;
  font-size: 28rpx;
  font-weight: 500;
}

.cart-footer {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  display: flex;
  align-items: center;
  justify-content: space-between;
  min-height: 88rpx;
  padding: 20rpx 24rpx;
  background-color: #FFFFFF;
  border-top: 1rpx solid #F1F5F9;
  padding-bottom: calc(20rpx + constant(safe-area-inset-bottom));
  padding-bottom: calc(20rpx + env(safe-area-inset-bottom));
  box-sizing: border-box;
}

.footer-left {
  display: flex;
  align-items: center;
  gap: 20rpx;
  flex: 1;
  min-width: 0;
}

.select-all {
  display: flex;
  align-items: center;
  gap: 8rpx;
  flex-shrink: 0;
}

.select-all-text {
  font-size: 26rpx;
  color: #64748B;
}

.footer-total {
  display: flex;
  align-items: baseline;
  flex: 1;
  min-width: 0;
  margin-left: 16rpx;
}

.total-label {
  font-size: 24rpx;
  color: #64748B;
  margin-right: 6rpx;
}

.total-price {
  font-size: 32rpx;
  font-weight: 600;
  color: #D4A017;
  flex-shrink: 0;
}

.checkout-btn {
  height: 72rpx;
  line-height: 72rpx;
  padding: 0 36rpx;
  background-color: #D4A017;
  color: #FFFFFF;
  border-radius: 10rpx;
  font-size: 28rpx;
  font-weight: 500;
  flex-shrink: 0;
  margin: 0;
  min-width: 140rpx;
}

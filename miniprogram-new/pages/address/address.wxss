/* pages/address/address.wxss */

.address-page {
  min-height: 100vh;
  display: flex;
  flex-direction: column;
  background-color: #f7f8fa;
  padding: 24rpx;
  box-sizing: border-box;
  gap: 20rpx;
}

.empty {
  margin-top: 120rpx;
  text-align: center;
  color: #999;
  font-size: 28rpx;
}

.card {
  background: #fff;
  border-radius: 16rpx;
  padding: 24rpx;
  box-shadow: 0 6rpx 20rpx rgba(0, 0, 0, 0.04);
  display: flex;
  flex-direction: column;
  gap: 14rpx;
}

.line {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.line.small {
  color: #666;
  font-size: 26rpx;
  line-height: 1.6;
}

.name {
  font-size: 30rpx;
  font-weight: 600;
}

.phone {
  font-size: 28rpx;
  color: #333;
}

.tag {
  margin-left: auto;
  background: #e6f2ff;
  color: #2b7ed2;
  padding: 4rpx 12rpx;
  border-radius: 12rpx;
  font-size: 22rpx;
}

.actions {
  display: flex;
  gap: 16rpx;
}

.add-btn {
  margin-top: auto;
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  background: linear-gradient(135deg, #3481b8, #5a9ed8);
  color: #ffffff;
  border-radius: 44rpx;
  font-size: 30rpx;
  text-align: center;
}


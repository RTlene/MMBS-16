.article-page {
  min-height: 100vh;
  background-color: #ffffff;
}

.article-webview-container {
  width: 100%;
  height: 100vh;
}

.loading {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 200rpx 0;
}

.loading-text {
  font-size: 28rpx;
  color: #999;
}

.error-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 200rpx 40rpx;
  text-align: center;
}

.error-icon {
  font-size: 120rpx;
  margin-bottom: 30rpx;
  opacity: 0.5;
}

.error-text {
  font-size: 32rpx;
  color: #666;
  margin-bottom: 40rpx;
}

.retry-btn {
  padding: 20rpx 60rpx;
  background-color: #3481B8;
  color: #ffffff;
  border-radius: 8rpx;
  font-size: 28rpx;
}

.article-content {
  height: 100vh;
}

.article-cover {
  width: 100%;
  background-color: #f5f5f5;
}

.cover-image {
  width: 100%;
  display: block;
}

.article-header {
  padding: 40rpx 30rpx 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.article-title {
  display: block;
  font-size: 44rpx;
  font-weight: bold;
  color: #333;
  line-height: 1.6;
  margin-bottom: 24rpx;
}

.article-meta {
  display: flex;
  align-items: center;
  font-size: 26rpx;
  color: #999;
}

.meta-item {
  flex-shrink: 0;
}

.meta-divider {
  margin: 0 16rpx;
  color: #ddd;
}

.article-body {
  padding: 40rpx 30rpx;
  min-height: 400rpx;
}

.article-text {
  font-size: 32rpx;
  line-height: 1.8;
  color: #333;
  word-wrap: break-word;
  word-break: break-all;
}

/* rich-text 组件会自动处理 HTML 样式，不需要深度选择器 */

.article-footer {
  padding: 40rpx 30rpx 60rpx;
  border-top: 1rpx solid #f0f0f0;
  margin-top: 40rpx;
}

.footer-stats {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 40rpx;
}

.stat-item {
  font-size: 28rpx;
  color: #666;
}


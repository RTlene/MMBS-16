/* pages/address-edit/address-edit.wxss */

.address-edit-page {
  min-height: 100vh;
  background-color: #f7f8fa;
  padding: 24rpx;
  box-sizing: border-box;
}

.form-item {
  background: #fff;
  border-radius: 16rpx;
  padding: 20rpx 24rpx;
  margin-bottom: 16rpx;
  display: flex;
  align-items: center;
  gap: 20rpx;
  box-shadow: 0 6rpx 20rpx rgba(0, 0, 0, 0.04);
}

.label {
  width: 150rpx;
  font-size: 28rpx;
  color: #333;
  flex-shrink: 0;
}

input {
  flex: 1;
  font-size: 28rpx;
  color: #333;
}

.picker-text {
  flex: 1;
  font-size: 28rpx;
  color: #333;
}

.map-btn {
  margin-left: auto;
}

.save-btn {
  margin-top: 40rpx;
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  background: linear-gradient(135deg, #3481b8, #5a9ed8);
  color: #ffffff;
  border-radius: 44rpx;
  font-size: 30rpx;
}


/* pages/order-detail/order-detail.wxss */

.order-detail-page {
  min-height: 100vh;
  background-color: #F8F8F8;
  padding-bottom: 140rpx;
}

/* 加载和错误状态 */
.loading, .error-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 200rpx 0;
  gap: 20rpx;
}

.loading-text, .error-text {
  font-size: 28rpx;
  color: #666666;
}

.error-icon {
  font-size: 80rpx;
}

.retry-btn {
  margin-top: 20rpx;
  padding: 16rpx 48rpx;
  background-color: #d4af37;
  color: #FFFFFF;
  border-radius: 8rpx;
  font-size: 26rpx;
}

/* 订单内容 */
.order-content {
  height: calc(100vh - 140rpx);
}

/* 订单状态 */
.status-section {
  background: linear-gradient(135deg, #d4af37 0%, #f4d03f 100%);
  padding: 60rpx 24rpx 40rpx;
  text-align: center;
  color: #FFFFFF;
}

.status-icon {
  margin-bottom: 20rpx;
}

.status-emoji {
  font-size: 80rpx;
}

.status-text {
  display: block;
  font-size: 36rpx;
  font-weight: 600;
  margin-bottom: 16rpx;
}

.order-no {
  display: block;
  font-size: 24rpx;
  opacity: 0.9;
}

/* 区块标题 */
.section-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #333333;
  margin-bottom: 16rpx;
  padding: 0 24rpx;
}

/* 收货信息 */
.address-section {
  margin: 24rpx 0;
}

.address-card {
  background-color: #FFFFFF;
  margin: 0 24rpx;
  padding: 24rpx;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.04);
}

.address-row {
  display: flex;
  align-items: center;
  gap: 24rpx;
  margin-bottom: 12rpx;
}

.receiver-name {
  font-size: 30rpx;
  font-weight: 600;
  color: #333333;
}

.receiver-phone {
  font-size: 28rpx;
  color: #666666;
}

.address-text {
  font-size: 26rpx;
  color: #666666;
  line-height: 1.6;
}

/* 商品列表 */
.items-section {
  margin: 24rpx 0;
}

.item-card {
  display: flex;
  background-color: #FFFFFF;
  margin: 0 24rpx 16rpx;
  padding: 20rpx;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.04);
  gap: 16rpx;
}

.item-image {
  width: 140rpx;
  height: 140rpx;
  border-radius: 12rpx;
  background-color: #F5F5F5;
  flex-shrink: 0;
}

.item-image-placeholder {
  width: 140rpx;
  height: 140rpx;
  border-radius: 12rpx;
  background-color: #F5F5F5;
  flex-shrink: 0;
  display: flex;
  align-items: center;
  justify-content: center;
}

.placeholder-text {
  font-size: 60rpx;
  opacity: 0.3;
}

.item-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
  min-width: 0;
}

.item-name {
  font-size: 28rpx;
  color: #333333;
  line-height: 1.4;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

.item-sku {
  font-size: 24rpx;
  color: #999999;
}

.item-meta {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: auto;
}

.item-price {
  font-size: 30rpx;
  font-weight: bold;
  background: linear-gradient(135deg, #d4af37 0%, #f4d03f 100%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
}

.item-qty {
  font-size: 26rpx;
  color: #666666;
}

/* 退货寄回与物流 */
.return-logistics-section {
  margin: 24rpx 0;
}

.return-logistics-card {
  background-color: #FFF9E6;
  margin: 0 24rpx;
  padding: 24rpx;
  border-radius: 16rpx;
  border: 1rpx solid #F0E68C;
}

.return-tip {
  font-size: 26rpx;
  color: #666;
  line-height: 1.5;
  margin-bottom: 16rpx;
}

.return-tip .highlight {
  color: #d4af37;
  font-weight: 600;
}

.return-address-block {
  margin-bottom: 20rpx;
  font-size: 26rpx;
  color: #333;
}

.return-address-label {
  color: #666;
}

.return-address-text {
  display: block;
  margin-top: 8rpx;
  word-break: break-all;
}

.return-logistics-card .form-row {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
  align-items: center;
}

.return-logistics-card .form-input {
  flex: 1;
  min-width: 160rpx;
  padding: 16rpx;
  font-size: 26rpx;
  border: 1rpx solid #ddd;
  border-radius: 8rpx;
  background: #fff;
}

.submit-logistics-btn {
  padding: 16rpx 32rpx;
  font-size: 26rpx;
  background: linear-gradient(135deg, #d4af37 0%, #f4d03f 100%);
  color: #333;
  border-radius: 8rpx;
}

.logistics-submitted {
  font-size: 26rpx;
  color: #666;
}

.info-value.return-address {
  white-space: pre-wrap;
  word-break: break-all;
}

/* 订单信息 */
.info-section {
  margin: 24rpx 0;
}

.info-card {
  background-color: #FFFFFF;
  margin: 0 24rpx;
  padding: 24rpx;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.04);
}

.info-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 16rpx 0;
  border-bottom: 1rpx solid #F0F0F0;
}

.info-row:last-child {
  border-bottom: none;
}

.info-label {
  font-size: 28rpx;
  color: #666666;
}

.info-value {
  font-size: 28rpx;
  color: #333333;
}

.info-value.price {
  font-size: 32rpx;
  font-weight: bold;
  background: linear-gradient(135deg, #d4af37 0%, #f4d03f 100%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
}

.info-value-wrapper {
  display: flex;
  align-items: center;
  gap: 16rpx;
  flex-wrap: wrap;
}

.logistics-link {
  font-size: 26rpx;
  color: #3481B8;
  text-decoration: underline;
}

/* 底部操作栏 */
.bottom-bar {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  display: flex;
  flex-wrap: wrap;
  align-items: center;
  justify-content: flex-end;
  gap: 16rpx;
  padding: 20rpx 24rpx;
  background-color: #FFFFFF;
  border-top: 1rpx solid #F0F0F0;
  box-shadow: 0 -2rpx 12rpx rgba(0, 0, 0, 0.05);
  padding-bottom: calc(20rpx + env(safe-area-inset-bottom));
}

.bottom-bar-hint {
  width: 100%;
  flex: 0 0 100%;
  order: -1;
  font-size: 24rpx;
  color: #999;
  text-align: center;
  padding-bottom: 12rpx;
}

.action-btn {
  min-width: 160rpx;
  height: 72rpx;
  line-height: 72rpx;
  border-radius: 36rpx;
  font-size: 28rpx;
  font-weight: 600;
  padding: 0 32rpx;
}

.action-btn.primary {
  background: linear-gradient(135deg, #d4af37 0%, #f4d03f 100%);
  color: #FFFFFF;
  box-shadow: 0 4rpx 12rpx rgba(212, 175, 55, 0.3);
}

.action-btn.secondary {
  background-color: #F5F5F5;
  color: #666666;
}

.verification-section {
  margin: 20rpx;
  background-color: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
}

.verification-section .section-title {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.view-all-link {
  font-size: 24rpx;
  color: #3481B8;
}

.verification-card {
  margin-top: 20rpx;
}

.verification-item {
  padding: 20rpx 0;
  border-bottom: 1px solid #f0f0f0;
}

.verification-item:last-child {
  border-bottom: none;
}

.verification-code {
  display: flex;
  align-items: center;
  margin-bottom: 12rpx;
}

.code-label {
  font-size: 28rpx;
  color: #666;
  margin-right: 8rpx;
}

.code-value {
  font-size: 32rpx;
  font-weight: bold;
  color: #3481B8;
  letter-spacing: 2rpx;
  margin-right: 16rpx;
}

.copy-btn {
  font-size: 24rpx;
  color: #3481B8;
  padding: 8rpx 16rpx;
  border: 1px solid #3481B8;
  border-radius: 8rpx;
}

.verification-status {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.status-text {
  font-size: 24rpx;
}

.status-unused {
  color: #4caf50;
}

.status-used {
  color: #9c27b0;
}

.status-expired {
  color: #f44336;
}

.expired-text {
  font-size: 24rpx;
  color: #999;
}

.used-text {
  font-size: 24rpx;
  color: #999;
}

/* 核销码商品信息 */
.verification-product {
  margin-bottom: 20rpx;
  padding-bottom: 16rpx;
  border-bottom: 1rpx solid #F0F0F0;
}

.product-name {
  display: block;
  font-size: 30rpx;
  font-weight: 600;
  color: #333333;
  margin-bottom: 8rpx;
}

.sku-name {
  display: block;
  font-size: 26rpx;
  color: #666666;
}

/* 二维码 */
.verification-qrcode {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin: 24rpx 0;
  padding: 24rpx;
  background-color: #F8F8F8;
  border-radius: 12rpx;
}

.qrcode-image {
  width: 300rpx;
  height: 300rpx;
  margin-bottom: 16rpx;
}

.qrcode-label {
  font-size: 26rpx;
  color: #666666;
}

/* 条形码 */
.verification-barcode {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin: 24rpx 0;
  padding: 24rpx;
  background-color: #F8F8F8;
  border-radius: 12rpx;
}

.barcode-image {
  width: 100%;
  max-width: 600rpx;
  height: auto;
  margin-bottom: 16rpx;
}

.barcode-label {
  font-size: 26rpx;
  color: #666666;
}

/* 资讯页：多分辨率适配 + 安全区 */
.articles-page {
  min-height: 100vh;
  min-height: 100dvh;
  background-color: var(--bg-grey, #f5f5f5);
  padding-left: constant(safe-area-inset-left);
  padding-left: env(safe-area-inset-left);
  padding-right: constant(safe-area-inset-right);
  padding-right: env(safe-area-inset-right);
}

.articles-list {
  padding: var(--spacing-sm, 20rpx);
  padding-bottom: calc(40rpx + constant(safe-area-inset-bottom));
  padding-bottom: calc(40rpx + env(safe-area-inset-bottom));
}

.article-item {
  display: flex;
  align-items: stretch;
  background-color: var(--bg-color, #ffffff);
  border-radius: var(--radius-lg, 16rpx);
  padding: var(--spacing-md, 24rpx);
  margin-bottom: var(--spacing-sm, 20rpx);
  box-shadow: var(--shadow-sm, 0 2rpx 12rpx rgba(0, 0, 0, 0.06));
}

/* 封面区：固定宽高比，多分辨率下按 rpx 缩放 */
.article-cover {
  width: 200rpx;
  min-width: 200rpx;
  height: 150rpx;
  border-radius: var(--radius-md, 12rpx);
  overflow: hidden;
  flex-shrink: 0;
  margin-right: var(--spacing-md, 24rpx);
  background-color: var(--border-light, #f0f0f0);
}

/* 无封面占位：简约 */
.article-cover.placeholder {
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #F1F5F9;
}

.cover-icon {
  font-size: 48rpx;
  opacity: 0.4;
  color: #94A3B8;
}

.cover-image {
  width: 100%;
  height: 100%;
}

.article-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  min-width: 0;
}

.article-title {
  font-size: 32rpx;
  font-weight: bold;
  color: var(--text-color, #333);
  line-height: 1.5;
  margin-bottom: 12rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  text-overflow: ellipsis;
}

.article-summary {
  font-size: 26rpx;
  color: var(--text-secondary, #666);
  line-height: 1.5;
  margin-bottom: 16rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  text-overflow: ellipsis;
}

.article-meta {
  display: flex;
  align-items: center;
  font-size: 24rpx;
  color: var(--text-placeholder, #999);
}

.meta-item {
  flex-shrink: 0;
}

.meta-divider {
  margin: 0 12rpx;
  color: #ddd;
}

/* 列表底部：紧凑间距，避免大块空白 */
.load-more {
  text-align: center;
  padding: var(--spacing-md, 24rpx) 0;
}

.load-more-text {
  font-size: 26rpx;
  color: var(--text-placeholder, #999);
}

/* 空状态：居中、多分辨率友好 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  min-height: 60vh;
  padding: var(--spacing-xl, 40rpx);
  text-align: center;
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: var(--spacing-md, 24rpx);
  opacity: 0.4;
}

.empty-text {
  font-size: 32rpx;
  color: var(--text-placeholder, #999);
}


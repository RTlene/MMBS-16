/* pages/search/search.wxss */

.search-page {
  min-height: 100vh;
  background-color: #F8F8F8;
  display: flex;
  flex-direction: column;
}

.search-bar {
  padding: 24rpx;
  background: linear-gradient(135deg, #3481B8, #5A9ED8);
}

.search-input-wrapper {
  display: flex;
  align-items: center;
  background-color: rgba(255, 255, 255, 0.95);
  border-radius: 32rpx;
  padding: 0 16rpx;
}

.search-icon {
  font-size: 28rpx;
  color: #999999;
  margin-right: 12rpx;
}

.search-input {
  flex: 1;
  height: 64rpx;
  font-size: 28rpx;
  border: none;
  background: transparent;
}

.search-btn {
  height: 52rpx;
  line-height: 52rpx;
  padding: 0 32rpx;
  font-size: 26rpx;
  color: #FFFFFF;
  background: linear-gradient(135deg, #d4af37 0%, #f4d03f 100%);
  border-radius: 26rpx;
  margin-left: 12rpx;
}

.history-section {
  background-color: #FFFFFF;
  margin: 20rpx 24rpx;
  border-radius: 16rpx;
  padding: 24rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.06);
}

.history-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.history-title {
  font-size: 28rpx;
  color: #333333;
  font-weight: 600;
}

.history-clear {
  font-size: 24rpx;
  color: #999999;
}

.history-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.history-tag {
  padding: 8rpx 20rpx;
  background-color: #F5F5F5;
  border-radius: 24rpx;
  font-size: 24rpx;
  color: #666666;
}

.result-section {
  flex: 1;
  padding: 0 24rpx 24rpx;
}

.result-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20rpx;
  padding-top: 20rpx;
}

.result-card {
  background-color: #FFFFFF;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.06);
  display: flex;
  flex-direction: column;
}

.card-image {
  width: 100%;
  height: 260rpx;
  background-color: #F5F5F5;
}

.card-info {
  padding: 16rpx;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
  min-height: 160rpx;
}

.card-name {
  font-size: 26rpx;
  color: #333333;
  line-height: 1.4;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  font-weight: 600;
}

.card-desc {
  font-size: 22rpx;
  color: #999999;
  line-height: 1.4;
  max-height: 60rpx;
  overflow: hidden;
}

.card-bottom {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-top: auto;
  gap: 12rpx;
}

.card-price {
  font-size: 30rpx;
  font-weight: bold;
  background: linear-gradient(135deg, #d4af37 0%, #f4d03f 100%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
}

.card-sales {
  font-size: 22rpx;
  color: #999999;
  white-space: nowrap;
}

.empty-state,
.error-state,
.loading-state {
  padding: 120rpx 0;
  text-align: center;
  color: #999999;
}

.empty-icon,
.error-icon {
  display: block;
  font-size: 80rpx;
  margin-bottom: 20rpx;
  opacity: 0.5;
}

.empty-text {
  font-size: 30rpx;
  color: #333333;
  margin-bottom: 8rpx;
}

.empty-desc {
  font-size: 24rpx;
  color: #999999;
}

.error-text {
  font-size: 26rpx;
  color: #666666;
  margin-bottom: 16rpx;
}

.retry-btn {
  padding: 12rpx 40rpx;
  border-radius: 24rpx;
  background: linear-gradient(135deg, #d4af37 0%, #f4d03f 100%);
  color: #FFFFFF;
  font-size: 26rpx;
  box-shadow: 0 4rpx 12rpx rgba(212, 175, 55, 0.3);
}


